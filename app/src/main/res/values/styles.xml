<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AveriaLibreRegular" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/averia_libre_regular</item>
    </style>

    <style name="AveriaLibreLight" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/averia_libre_light</item>
    </style>

    <style name="AveriaLibreBold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/averia_libre_bold</item>
    </style>

    <style name="Date" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>