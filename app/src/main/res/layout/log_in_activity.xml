<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_6sdp"
                android:src="@drawable/ic_left_arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewBack"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="start|center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/label_log_in"
                android:textAppearance="@style/AveriaLibreBold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_27sdp" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitle"
                android:layout_margin="@dimen/_6sdp"
                android:hint="@string/label_phone_no"
                android:textColorHint="@color/colorAccent"
                app:hintEnabled="true"
                app:hintTextColor="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textAppearance="@style/AveriaLibreBold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLogIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inputLayoutPhoneNo"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/rounded_shape"
                android:text="@string/label_log_in"
                android:textAllCaps="true"
                android:textAppearance="@style/AveriaLibreBold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_20sdp" />
        </RelativeLayout>
    </ScrollView>
</layout>