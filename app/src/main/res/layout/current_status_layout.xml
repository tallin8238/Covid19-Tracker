<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewCovid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_current_status" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTitle"
            android:layout_below="@+id/imageViewCovid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/label_current_status"
            android:textAppearance="@style/AveriaLibreBold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_22sdp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSubDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitle"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:text="Check in at Ahmedabad One Mall at 3:00 pm"
            android:textAppearance="@style/AveriaLibreRegular"
            android:textSize="@dimen/_16sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCheckOut"
            android:layout_below="@+id/textViewSubDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:textAppearance="@style/AveriaLibreBold"
            android:background="@drawable/rounded_shape"
            android:text="@string/check_out"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            app:cornerRadius="@dimen/_20sdp" />
    </RelativeLayout>
</layout>